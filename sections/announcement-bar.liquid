<style>
  .infinite-scroll-bar {
    background-color: #3a86ff;
    padding: 10px 0;
    overflow: hidden;
    width: 100%;
    position: relative;
  }
  
  .marquee-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .marquee-content {
    display: inline-flex;
    white-space: nowrap;
    animation: marquee-scroll {{ section.settings.scroll_speed }}s linear infinite;
  }
  
  .infinite-scroll-message {
    color: #222222;
    font-family: var(--font-body-family);
    font-weight: 500;
    font-size: 14px;
    padding: 0 30px;
    letter-spacing: 0.05em;
    white-space: nowrap;
    flex-shrink: 0;
  }
  
  @keyframes marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  
  {% if section.settings.pause_on_hover %}
  .marquee-container:hover .marquee-content {
    animation-play-state: paused;
  }
  {% endif %}
  
  @media screen and (max-width: 749px) {
    .infinite-scroll-message {
      font-size: 12px;
      padding: 0 20px;
    }
  }
</style>

<div class="infinite-scroll-bar" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
  <div class="marquee-container">
    <div id="marquee-content" class="marquee-content">
      {%- for block in section.blocks -%}
        <div class="infinite-scroll-message" {{ block.shopify_attributes }}>
          {%- if block.settings.text != blank -%}
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="link link--text focus-inset">
            {%- endif -%}
              <span>{{ block.settings.text | escape }}</span>
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get the parent container and the content
    const marqueeContent = document.getElementById('marquee-content');
    
    // If no blocks, exit early
    if (!marqueeContent || !marqueeContent.children.length) return;
    
    // Clone the content enough times to fill the screen width multiple times
    // This ensures smooth infinite scrolling
    const contentWidth = marqueeContent.offsetWidth;
    const screenWidth = window.innerWidth;
    
    // Calculate how many copies we need (at least 2, plus enough to fill screen 2x)
    const copiesNeeded = Math.max(2, Math.ceil(screenWidth / contentWidth) * 2);
    
    // Clone the content
    for (let i = 0; i < copiesNeeded; i++) {
      const clone = marqueeContent.cloneNode(true);
      // Remove the ID from clones
      clone.removeAttribute('id');
      marqueeContent.after(clone);
    }
    
    // Set CSS custom property for animation duration based on content width
    // This makes the animation speed consistent regardless of content length
    const scrollSpeed = {{ section.settings.scroll_speed | json }};
    document.documentElement.style.setProperty('--marquee-duration', scrollSpeed + 's');
    
    // Update animation on window resize
    window.addEventListener('resize', function() {
      // Check if we need more clones based on new window size
      const currentContentWidth = document.querySelector('.marquee-content').offsetWidth;
      const currentScreenWidth = window.innerWidth;
      const currentCopies = document.querySelectorAll('.marquee-content').length;
      const newCopiesNeeded = Math.max(2, Math.ceil(currentScreenWidth / currentContentWidth) * 2);
      
      if (newCopiesNeeded > currentCopies) {
        const originalContent = document.getElementById('marquee-content');
        for (let i = 0; i < newCopiesNeeded - currentCopies; i++) {
          const clone = originalContent.cloneNode(true);
          clone.removeAttribute('id');
          originalContent.after(clone);
        }
      }
    });
  });
</script>

