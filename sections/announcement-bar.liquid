{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

<style>
  .infinite-scroll-bar {
    background-color: #3a86ff;
    padding: 10px 0;
    overflow: hidden;
    width: 100%;
    position: relative;
  }
  
  .marquee {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .marquee-content {
    display: flex;
    white-space: nowrap; /* prevent wrapping */
    animation: marquee {{ section.settings.scroll_speed }}s linear infinite;
  }
  
  .infinite-scroll-message {
    color: #222222;
    font-family: var(--font-body-family);
    font-weight: 500;
    font-size: 14px;
    padding: 0 30px;
    letter-spacing: 0.05em;
    white-space: nowrap;
    flex-shrink: 0;
  }
  
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%); /* scroll by one complete copy */
    }
  }
  
  {% if section.settings.pause_on_hover %}
  .marquee:hover .marquee-content {
    animation-play-state: paused;
  }
  {% endif %}
  
  @media screen and (max-width: 749px) {
    .infinite-scroll-message {
      font-size: 12px;
      padding: 0 20px;
    }
  }
</style>


<div class="marquee">
  <div class="marquee-content">
    {%- comment -%} First set of messages {%- endcomment -%}
    {%- for block in section.blocks -%}
      <div class="infinite-scroll-message" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="link link--text focus-inset">
          {%- endif -%}
            <span>{{ block.settings.text | escape }}</span>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endfor -%}
    
    {%- comment -%} Duplicate set of messages to create seamless loop {%- endcomment -%}
    {%- for block in section.blocks -%}
      <div class="infinite-scroll-message" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="link link--text focus-inset">
          {%- endif -%}
            <span>{{ block.settings.text | escape }}</span>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>


